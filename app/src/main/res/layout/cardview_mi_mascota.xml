<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMiMascota"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alto_cvMiMascota"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgFotoCV2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alto_img_mimascota"
            android:src="@drawable/puppy"
            android:scaleType="centerInside"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvPuntosCV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/foto_txt_mimascota"
                android:text="3"
                android:layout_marginLeft="@dimen/margen_txt_mimascota"
            />
            <ImageView
                android:id="@+id/imgHuesoColorCV2"
                android:layout_alignRight="@+id/tvPuntosCV2"
                android:layout_width="@dimen/foto_txt_mimascota"
                android:layout_height="@dimen/foto_txt_mimascota"
                android:src="@drawable/color_bone"
                android:background="@color/fondo_blanco"
                android:layout_marginRight="@dimen/margen_txt_mimascota"
            />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>